@model FighterView

@{
    ViewData["Title"] = "Build a Figher";
    //{ "Head", "Chest", "Gloves", "Pants", "Shoes", "Ring", "Right Hand", "Left Hand" }

    string hidden = "hidden";
    if (Model.Duplicate)
    {
        hidden = "";
    }
    string pic = Logic.GenerateFighterPic(Model.Fighter);
    string[] pics = new string[Logic.TypeValidation.Count()];
    for (int i = 0; i < pics.Count(); i++)
    {
        if (Model.Fighter.FighterID == 0
            || Model.Fighter[Logic.TypeValidation[i]] == null
            || Model.Fighter[Logic.TypeValidation[i]].EquipmentID == 0) 
        {
            string type = "";

            if (Logic.TypeValidation[i] == "Right Hand")
            {
                type += "Sword";
            }
            else if (Logic.TypeValidation[i] == "Left Hand")
            {
                type += "Shield";
            }
            else
            {
                type += Logic.TypeValidation[i];
            }
            pics[i] = type + "Blank.jpg";
        }
        else
        {
            pics[i] = Logic.GenerateEquipmentPic(Model.Fighter[Logic.TypeValidation[i]]);
        }
    }

    if (Model.Fighter.FighterID == 0)
    {
        pic = "FighterBlank.jpg";
    }
}

<form asp-action="Edit" method="post">
    <div class="card container">
        <div class="row">
            <div class="col-1"></div>
            <button class="col-4 btn btn-primary btn-lg" type="submit">Edit Existing</button>
            <div class="col-2"></div>
            <a class="col-4 btn btn-primary btn-lg" asp-action="Index">Create New</a>
            <div class="col-1"></div>
        </div>
        <div class="row">
            <div class="col-1"></div>
            <div class="col-4 form-group">
                <select class="form-control" name="id">
                    @foreach (Fighter f in Model.AllFighters)
                    {
                        <option value="@f.FighterID">@f.Name</option>
                    }
                </select>
            </div>
            <div class="col-7"></div>
        </div>
    </div>
</form>

<form asp-action="Save" method="post">
