@model Fighter

@{
    ViewData["Title"] = "Build a Figher";
    //{ "Head", "Chest", "Gloves", "Pants", "Shoes", "Ring", "Right Hand", "Left Hand" }
    string pic = Logic.GenerateFighterPic(Model);
    string[] pics = new string[Logic.TypeValidation.Count()];
    for (int i = 0; i < pics.Count(); i++)
    {
        if (Model == Logic.blankFighter || Model[Logic.TypeValidation[i]] == Logic.blankEquipment)
        {
            pics[i] = "EquipmentBlank.jpg";
        }
        else
        {
            pics[i] = Logic.GenerateEquipmentPic(Model[Logic.TypeValidation[i]]);
        }
    }

    if (Model == Logic.blankFighter)
    {
        pic = "FighterBlank.jpg";
    }
}

<form asp-action="Edit" method="post">
    <div class="card container">
        <div class="row">
            <div class="col-1"></div>
            <button class="col-4 btn btn-primary btn-lg" type="submit">Edit Existing</button>
            <div class="col-2"></div>
            <a class="col-4 btn btn-primary btn-lg" asp-action="Index">Create New</a>
            <div class="col-1"></div>
        </div>
        <div class="row">
            <div class="col-1"></div>
            <div class="col-4 form-group">
                <select class="form-control" name="id">
                    @foreach (Fighter f in Repository.SavedFighters)
                    {
                        <option value="@f.Id">@f.Name</option>
                    }
                </select>
            </div>
            <div class="col-7"></div>
        </div>
    </div>
</form>

