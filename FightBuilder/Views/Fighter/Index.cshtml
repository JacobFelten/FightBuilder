                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="Fighter.Color">Color:</label>
                        <select class="form-control" asp-for="Fighter.Color">
                            @foreach (string color in Logic.ColorValidation)
                            {
                                if (color == Model.Fighter.Color)
                                {
                                    <option value="@color" selected>@color</option>
                                }
                                else
                                {
                                    <option value="@color">@color</option>
                                }
                            }
