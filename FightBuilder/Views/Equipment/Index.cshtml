@model EquipmentView

@{
    ViewData["Title"] = "Design Equipment";
    //"head", "chest", "gloves", "pants", "shoes", "ring", "rhand", "lhand"
    //"black", "white", "red", "orange", "yellow", "green", "skyBlue", "blue", "purple", "pink"    

    string pic = Logic.GenerateEquipmentPic(Model.Equipment);
    string hidden = "hidden";
    if (Model.Equipment == Logic.blankEquipment)
    {
        ViewBag.EquipmentStatus = "";
        ViewBag.EquipmentDuplicate = "";
        pic = "EquipmentBlank.jpg";
    }
    if ((ViewBag.EquipmentDuplicate ?? "") != "")
    {
        hidden = "";
    }
}

<form asp-action="Edit" method="post">
    <div class="card container">
        <div class="row">
            <div class="col-1"></div>
            <button class="col-4 btn btn-primary btn-lg" type="submit">Edit Existing</button>
            <div class="col-2"></div>
            <a class="col-4 btn btn-primary btn-lg" asp-action="Index">Create New</a>
            <div class="col-1"></div>
        </div>
        <div class="row">
            <div class="col-1"></div>
            <div class="col-4 form-group">
                <select class="form-control" name="id">
                    @foreach (Equipment e in Model.AllEquipment)
                    {
                        <option value="@e.EquipmentID">@e.Name</option>
                    }
                </select>
            </div>
            <div class="col-7"></div>
        </div>
    </div>
</form>

<form asp-action="Save" method="post">
    <div class="card container">
        <div class="card-header">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h1 class="text-success">@ViewBag.EquipmentStatus</h1>
            <ul class="@hidden">
                <li class="text-danger">@ViewBag.EquipmentDuplicate</li>
            </ul>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Equipment.EquipmentID" value="@Model.Equipment.EquipmentID" />
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="Equipment.Type">Type:</label>
                        <select class="form-control" asp-for="Equipment.Type">
                            @foreach (string type in Logic.TypeValidation)
                            {
                                if (type == Model.Equipment.Type)
                                {
                                    <option value="@type" selected>@type</option>
                                }
                                else
                                {
                                    <option value="@type">@type</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.Name">Name:</label>
                <input class="form-control" asp-for="Equipment.Name" value="@Model.Equipment.Name" />
            </div>
            <div class="form-group">
                <label asp-for="Equipment.Description">Description:</label>
                <textarea class="form-control" rows="3" asp-for="Equipment.Description">@Model.Equipment.Description</textarea>
            </div>
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="Equipment.Color">Color:</label>
                        <select class="form-control" asp-for="Equipment.Color">
                            @foreach (string color in Logic.ColorValidation)
                            {
                                if (color == Model.Equipment.Color)
                                {
                                    <option value="@color" selected>@color</option>
                                }
                                else
                                {
                                    <option value="@color">@color</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-9"></div>
            </div>
            <div class="row">
                <div class="col-2">
                    <div class="form-group">
                        <label asp-for="Equipment.PhysDam">Physical Attack:</label>
                        <input class="form-control" asp-for="Equipment.PhysDam" value="@Model.Equipment.PhysDam" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Equipment.MagDam">Magic Attack:</label>
                        <input class="form-control" asp-for="Equipment.MagDam" value="@Model.Equipment.MagDam" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Equipment.FireDam">Fire Attack:</label>
                        <input class="form-control" asp-for="Equipment.FireDam" value="@Model.Equipment.FireDam" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Equipment.PhysDef">Physical Defence:</label>
                        <input class="form-control" asp-for="Equipment.PhysDef" value="@Model.Equipment.PhysDef" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Equipment.MagDef">Magic Defence:</label>
                        <input class="form-control" asp-for="Equipment.MagDef" value="@Model.Equipment.MagDef" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Equipment.FireDef">Fire Defence:</label>
                        <input class="form-control" asp-for="Equipment.FireDef" value="@Model.Equipment.FireDef" />
                    </div>
                </div>
                <div class="col-3"></div>
                <div class="col-5 text-center">
                    <img class="fit" src="~/Images/@pic" alt="Equipment Picture" />
                </div>
                <div class="col-2"></div>
            </div>
        </div>
        <div class="card-footer row">
            <div class="col-2"></div>
            <button class="btn btn-secondary text-center col-8" type="submit"><h6>Save</h6></button>
            <div class="col-2"></div>
        </div>
    </div>
</form>