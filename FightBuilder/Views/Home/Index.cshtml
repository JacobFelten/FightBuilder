@model HomeView

@{
    ViewData["Title"] = "Home";

    string hidden = "hidden";
    if (Model.Winners.Count > 0 || Model.Losers.Count > 0)
    {
        hidden = "";
    }

    string pic = "";
    string hidden2 = "hidden";
    if (Model.RandomEquipment != null)
    {
        pic = Logic.GenerateEquipmentPic(Model.RandomEquipment);
        hidden2 = "";
    }
}

<div class="jumbotron text-center">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <h1>Welcome to Fight Builder!</h1>
            <h6>Here you can create numerous fighters and pit them
            against each other to see who is stronger. Whether or
            not a fighter wins a battle is determined by what equipment
            they are wearing. Start by making some equipment on the
            <i>Design Equipment</i> page and then make some fighters to wear
            the equipment on the <i>Build a Fighter</i> page. Then head over
            to the <i>Fight!</i> page and pick two fighters that will go
            head to head. To see everything you’ve made or delete
            any fighters or equipment, go to the <i>Data Tables</i> page.</h6>
        </div>
        <div class="col-2"></div>
    </div>
</div>

<div class="row">
    <div class="col-1"></div>
    <div class="col-4">
        <div class="card container @hidden">
            <div class="card-header">
                <h4>Leader Board</h4>
            </div>
            <div class="card-body">
                <h3 class="text-center">Most Wins</h3>
                @foreach (Fighter f in Model.Winners)
                {
                    <div class="text-center">
                        <span class="font-weight-bold">- - - - -<br /></span>
                    </div>
                    <div>
                        <b>Name:</b> @f.Name<br />
                        <b>Wins:</b> @f.Wins
                    </div>
                }
                <br />
                <h3 class="text-center">Most Losses</h3>
                @foreach (Fighter f in Model.Losers)
                {
                    <div class="text-center">
                        <span class="font-weight-bold">- - - - -<br /></span>
                    </div>
                    <div>
                        <b>Name:</b> @f.Name<br />
                        <b>Losses:</b> @f.Losses
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-2"></div>
    <div class="col-4">
        <div class="card container @hidden2">
            @if (Model.RandomEquipment != null)
            {
                <div class="card-header">
                    <h4>Random Equipment</h4>
                </div>
                <div class="card-body">
                    <h3 class="text-center">@Model.RandomEquipment.Name</h3>
                    <img class="fit" src="~/Images/@pic" alt="Equipment Picture" />
                    <b>Description:</b> @Model.RandomEquipment.Description <br /> 
                    <b>Physical Damage/Defense:</b> @Model.RandomEquipment.PhysDam/@Model.RandomEquipment.PhysDef<br />
                    <b>Magic Damage/Defense:</b> @Model.RandomEquipment.MagDam/@Model.RandomEquipment.MagDef<br />
                    <b>Fire Damage/Defense:</b> @Model.RandomEquipment.FireDam/@Model.RandomEquipment.FireDef
                </div>
            }
        </div>
    </div>
    <div class="col-1"></div>
</div>