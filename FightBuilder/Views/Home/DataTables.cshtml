@model bool

@{
    Layout = "_DataTablesLayout";
    ViewData["Title"] = "Data Tables";

    string hidden = "";
    if (Model)
    {
        hidden = "hidden";
    }
}

<div class="@hidden">
    <h2 class="text-center text-danger">
        You can't delete an equipment that a fighter is using.
    </h2>
</div>

<div class="row">
    <div class="col-1"></div>
    <div class="col-4">
        <div class="card container">
            <form asp-action="FighterSearch" method="post">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <button type="submit" class="btn">Search</button>
                            </span>
                        </div>
                        <input class="form-control" name="search" />
                    </div>
                </div>
            </form>
            <a asp-action="FighterTable">
                <img class="fit" src="~/Images/FighterBlack.jpg" alt="Fighter Picture" />
            </a>
        </div>
    </div>
    <div class="col-2"></div>
    <div class="col-4">
        <div class="card container">
            <form asp-action="EquipmentSearch" method="post">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <button type="submit" class="btn">Search</button>
                            </span>
                        </div>
                        <input class="form-control" name="search" />
                    </div>
                </div>
            </form>
            <a asp-action="EquipmentTable">
                <img class="fit" src="~/Images/EquipmentButton.jpg" alt="Equipment Picture" />
            </a>
        </div>
    </div>
    <div class="col-1"></div>
</div>
